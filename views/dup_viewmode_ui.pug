div.px-5
	div.d-block
		div.media
			img.align-self-center(src='open-iconic/svg/folder.svg').icon
			div.media-body
				label.px-2.m-auto='App'
		div.mx-4.d-block
			each folder, i in locals.content
				div.media
					img.align-self-center(src='open-iconic/svg/folder.svg').icon
					div.media-body
						label.px-2.m-auto=folder.name
				div.mx-4
					each file, j in folder.files
						table.table.table-hover.table-borderless.table-sm.m-0
							tbody.d-inline
								tr(id='row_' + i + j)
									th.d-inline-block
										img(src='open-iconic/svg/file.svg').icon
									th.d-inline-block
										label.m-auto=file.name
									th.d-none(id='controls_for_row_' + i + j)
										div.d-inline-block
											img.mx-1(src='open-iconic/svg/eye.svg').icon
											img.mx-1(src='open-iconic/svg/data-transfer-download.svg').icon
											img.mx-1(src='open-iconic/svg/trash.svg').icon