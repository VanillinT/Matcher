div.modal.fade(tabindex=-1 role='dialog' aria-hidden=true)
	div.modal-dialog.modal-lg(role='document')
		div.modal-content
			div.modal-header
				h5='Просмотр файла ' + locals.filename
				button.close(type='button' data-dismiss='modal' aria-label='Close')
					span(aria-hidden=true)='╳'
			div.modal-body
				div#text_box=locals.text
			div.modal-footer
				button.btn.btn-secondary(data-dismiss='modal')='Закрыть'
				button.btn.btn-primary#btn_edit='Изменить'
				button.btn.btn-primary()#btn_save='Сохранить'