block sections
	#uv_content.overflow-auto
		block uv_content
			include viewpage_html
	.d-flex.justify-content-between.input-group.p-3.fixed-bottom#footer
		div
			.btn-group.btn-group-toggle.d-block.m-auto(data-toggle='buttons')#modetoggles
				label.rounded-0.btn.btn-outline-secondary(class=(mode==='view' ? 'active' : null))='Режим просмотра'
					input#viewmode(type='radio' name='view' autocomplete='off' checked=(mode==='view'))
				label.rounded-0.btn.btn-outline-secondary(class=(mode==='upload' ? 'active' : null))='Режим загрузки'
					input#upmode(type='radio' name='upload' autocomplete='off' checked=(mode==='upload'))
		.d-flex.justify-content-end
			button.btn.btn-secondary.m-auto.rounded-0(type='button' style='display: ' + (mode ==='upload' ? 'true' : 'none'))#btn_upload='Загрузить'
	script.
		$.getScript('/javascripts/utr.js')
		$.getScript('/javascripts/uploadandview.js')
		$.getScript('/jsviews/utr_ui.js')
		$.getScript('/jsviews/dup_viewmode_modal.js')